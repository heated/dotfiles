// extensions:
// * vim
// * gitlens
// * eslint
// * SQL tagged template literals (syntax only) by Jan Kuehle
// * SQLTools by mtxr for partial SQL formatting

// mac keyboard was { key-repeat: -1, delay: -3 }
// is now { key-repeat: -0, delay: -0 }

// files to exclude from search: bundle.js, .cache, node_modules/, .git, package-lock.json, dist/, build/, vendor/, *.js.map, *.min.js

{
    // to see workspace folder
    // "window.title": "${dirty}${activeEditorShort}${separator}${folderPath}${separator}${appName}",
    "editor.lineNumbers": "relative",

    "editor.minimap.enabled": false,
    "workbench.settings.editor": "json",
    "editor.wordWrap": "on",
    "editor.rulers": [80],
    "editor.formatOnSave": true,
    "vim.foldfix": true,
    "vim.useSystemClipboard": true,

    "gitlens.blame.avatars": false,
    "gitlens.blame.format": "${author|9}: ${agoOrDate|13-}",
    // toggle these two for precise blame dates
    // "gitlens.blame.format": "${author|9}: ${date|10-}",
    // "gitlens.blame.dateFormat": "MM/DD/YYYY",

    // smaller margins
    // "editor.glyphMargin": false,
    // "editor.folding": false,
    "workbench.activityBar.visible": false,

    // don't scroll past last line as much
    "editor.scrollBeyondLastLine": false,
    "editor.padding.bottom": 500,
    "editor.tabSize": 2,
    "extensions.ignoreRecommendations": true,

    "extensions.experimental.affinity": {
        "vscodevim.vim": 1,
        "asvetliakov.vscode-neovim": 1,
    },
    "editor.fontSize": 11.6,
    "[sql]": {
        "editor.defaultFormatter": "mtxr.sqltools"
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "prettier.enableDebugLogs": true,

    // "eslint.options": {
    //     "rules": {
    //         "max-len": ["warn", {
    //             // "code": 100,
    //             "ignoreComments": true,
    //             "ignoreStrings": true,
    //         }]
    //     }
    // },
}